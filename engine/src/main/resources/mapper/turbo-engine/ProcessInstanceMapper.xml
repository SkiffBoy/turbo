<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.didiglobal.turbo.engine.dao.mapper.ProcessInstanceMapper">
    <resultMap id="FlowInstancePO" type="com.didiglobal.turbo.engine.entity.FlowInstancePO">
        <id     column="id" property="id"/>
        <result column="tenant" property="tenant"/>
        <result column="caller" property="caller"/>
        <result column="create_time" property="createTime"/>
        <result column="archive" property="archive"/>

        <result column="flow_instance_id" property="flowInstanceId"/>
        <result column="flow_deploy_id" property="flowDeployId"/>
        <result column="flow_module_id" property="flowModuleId"/>
        <result column="parent_flow_instance_id" property="parentFlowInstanceId"/>
        <result column="status" property="status"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>

    <!-- selectByFlowInstanceId -->
    <select id="selectByFlowInstanceId" resultMap="FlowInstancePO">
        SELECT * FROM ei_flow_instance WHERE flow_instance_id = #{flowInstanceId}
    </select>


    <!-- updateStatus -->
    <update id="updateStatus" parameterType="com.didiglobal.turbo.engine.entity.FlowInstancePO">
        UPDATE ei_flow_instance SET status = #{status}, modify_time = #{modifyTime} WHERE flow_instance_id = #{flowInstanceId}
    </update>
    <update id="updateStatus" databaseId="MySQL" parameterType="com.didiglobal.turbo.engine.entity.FlowInstancePO">
        UPDATE ei_flow_instance SET status = #{status}, modify_time = now() WHERE flow_instance_id = #{flowInstanceId}
    </update>
    <update id="updateStatus" databaseId="Oracle" parameterType="com.didiglobal.turbo.engine.entity.FlowInstancePO">
        UPDATE ei_flow_instance SET status = #{status}, modify_time = SYSDATE WHERE flow_instance_id = #{flowInstanceId}
    </update>
    <update id="updateStatus" databaseId="PostgreSQL" parameterType="com.didiglobal.turbo.engine.entity.FlowInstancePO">
        UPDATE ei_flow_instance SET status = #{status}, modify_time = current_timestamp WHERE flow_instance_id = #{flowInstanceId}
    </update>

</mapper>
